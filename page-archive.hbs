{{!< default}}

{{!-- The main content area --}}
<main id="site-main" class="site-main outer">
    <div class="inner">
        <h1 class="site-title">Archived Issues</h1>
        {{#get "tags" limit="all" filter="name:-[arts, business, 'campus life', 'news in pictures', 'off campus', opinion, politics, 'science & technology', sports]"}}
                <ul class="issue-list">
                    {{#foreach tags}}
                        {{!-- // get posts
                        // {{ #pick "1" post}}
                            // list date + tag --}}
                        <li class="issue-individual">
                            <a href="{{url}}">{{date format="YYYY-MM-DD"}} {{name}} </a>
                        </li>
                    {{/foreach}}
                </ul>
        {{/get}}
    </div>
</main>
